{
  "name": "restfastify",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": ""
  },
  "description": "REST service",
  "main": "src/server.ts",
  "scripts": {
    "docker:start": "docker compose up --build",
    "docker:stop": "docker compose down",
    "migration:generate": "ts-node ./node_modules/typeorm/cli migration:generate -n initial -p",
    "migration:run": "ts-node ./node_modules/typeorm/cli migration:run",
    "start": "nodemon src/server.ts --legacy-watch --exitcrash",
    "build": "tsc --project tsconfig.json",
    "doc": "typedoc",
    "lint": "eslint --ext .js,.ts --fix src/",
    "test": "cross-env DEBUG=rs:* jest --testMatch \"<rootDir>/test/e2e/test/*.test.js\" --noStackTrace --runInBand",
    "test:auth": "cross-env DEBUG=rs:* TEST_MODE=auth jest --noStackTrace"
  },
  "keywords": [
    "nodejs",
    "fastify",
    "jest"
  ],
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0 <17"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "fastify": "^3.24.1",
    "fastify-jwt": "^4.1.3",
    "fastify-swagger": "^4.12.6",
    "http-status-codes": "^2.1.4",
    "pg": "^8.7.1",
    "pino": "^7.6.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.41",
    "uuid": "8.3.2",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.13.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^16.11.12",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "chai": "4.3.4",
    "debug": "4.3.2",
    "dirty-chai": "2.0.1",
    "eslint": "^8.2.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^4.3.8",
    "jest": "27.3.1",
    "lint-staged": "12.0.3",
    "nodemon": "2.0.15",
    "pino-pretty": "^7.3.0",
    "supertest": "6.1.6",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typedoc-plugin-merge-modules": "^3.1.0",
    "typescript": "^4.5.2"
  }
}
